        margin: 0 auto;
        padding: 20px;
      }

      .search-container {
        text-align: center;
        margin-bottom: 20px;
      }

      .product-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-content: center;
        align-items: center;
      }

      .product {
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s;
        background: white;
        width: 250px; /* Adjust the width as needed */
        height: 200px; /* Adjust the height as needed */
      }

      .product:hover {
        transform: scale(1.05);
      }

      .product img {
        width: 100%;
        height: 120px; /* Set the desired height for the image */
        object-fit: cover; /* Maintain aspect ratio and cover the entire space */
        border-bottom: 1px solid #ccc;
      }

      .product-content {
        padding: 1px;
        text-align: center;
      }

      .product h2 {
        margin-bottom: 1px;
        font-size: 1.2rem;
        color: #333;
      }

      .product p {
        font-size: 1.2rem;
        color: #666;
      }

      .search-results {
        margin-top: 20px;
        text-align: center;
      }
    </style>
  </head>

